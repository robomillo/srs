section#review input#again { background-color: #900; color: #fff }
section#review input#hard { background-color: #ff0; color: #000 }
section#review input#good { background-color: #0f0; color: #000 }
section#review input#easy { background-color: #00f; color: #fff }
section#review button#showedit { float: right }
